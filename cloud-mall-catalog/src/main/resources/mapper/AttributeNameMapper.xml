<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.mapper.AttributeNameMapper">
	<resultMap id="attributeNameMap" type="AttributeName">
		<id property="id" column="attr_name_id" javaType="long" jdbcType="BIGINT"/>
		<result property="name" column="attr_name" />
		<result property="type" column="attr_type" />
		<result property="fieldName" column="field_name" />
		<result property="fieldType" column="field_type" />
		<result property="inputType" column="input_type" />
		<result property="required" column="required" javaType="boolean" jdbcType="TINYINT" />
		<result property="group" column="attr_group" />
		<result property="displayOrder" column="display_order" />
		<result property="status" column="status" />
		<result property="skuAttribute" column="is_sku_attr" javaType="boolean" jdbcType="TINYINT" />
		<result property="deleted" column="deleted" javaType="boolean" jdbcType="TINYINT" />
		<result property="createTime" column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 根据id查询属性名 -->
	<select id="find" parameterType="long" resultMap="attributeNameMap">
		SELECT * FROM cloud_attr_name
		WHERE `attr_name_id` = #{id} AND deleted = 0
	</select>

	<!-- 根据所有属性名 -->
	<select id="findAll" resultMap="attributeNameMap">
		SELECT * FROM cloud_attr_name WHERE deleted = 0
	</select>

	<!-- 统计属性名个数 -->
	<select id="count" resultType="long">
		SELECT COUNT(1) FROM cloud_attr_name WHERE deleted = 0
	</select>

	<!--查找某一个category下的所有属性-->
	<select id="findAttributeNameListByCategoryId" parameterType="long" resultMap="attributeNameMap">
		SELECT * FROM cloud_attr_name
		WHERE deleted = 0 AND attr_name_id
		IN (
			SELECT attr_name_id
			FROM cloud_cat_attr_name
			WHERE cat_id =#{catId} AND deleted = 0
		)
	</select>

	<!-- 添加属性 -->
	<insert id="save" parameterType="AttributeName">
		INSERT INTO cloud_attr_name(
			`attr_name_id`,
			`attr_name`,
			`attr_type`,
			`field_name`,
			`field_type`,
			`input_type`,
			`required`,
			`attr_group`,
			`display_order`,
			`status`,
			`is_sku_attr`,
			`deleted`,
			`create_time`,
			`update_time`)
		VALUES (
			#{id},#{name},#{type},#{fieldName},#{fieldType},#{inputType},#{required},#{group},
			#{displayOrder},#{status},#{skuAttribute},#{deleted},#{createTime},#{updateTime})
	</insert>

	<!-- 批量添加属性 -->
	<insert id="saveList" parameterType="java.util.ArrayList">
		INSERT INTO cloud_attr_name(
			`attr_name_id`,`attr_name`,`attr_type`,`field_name`,`field_type`,``input_type`,
			`required`,`attr_group`,`display_order`,`status`,`is_sku_attr`,`deleted`,``create_time`,`update_time`)
		VALUES
			<foreach collection="list" item="element" separator=",">
				(
					#{element.id},
					#{element.name},
					#{element.type},
					#{element.fieldName},
					#{element.fieldType},
					#{element.inputType},
					#{element.required},
					#{element.group},
					#{element.displayOrder},
					#{element.status},
					#{element.skuAttribute},
					#{element.deleted},
					#{element.createTime},
					#{element.updateTime}
				)
			</foreach>
	</insert>


	<!-- 更新属性 -->
	<update id="update" parameterType="AttributeName">
		UPDATE cloud_attr_name
		<set>
			<if test="id != null">`attr_name_id` = #{id},</if>
			<if test="name != null">`attr_name` = #{name},</if>
			<if test="type != null">`attr_type` = #{type},</if>
			<if test="fieldName != null">`field_name` = #{fieldName},</if>
			<if test="fieldType != null">`field_type` = #{fieldType},</if>
			<if test="inputType != null">`input_type` = #{inputType},</if>
			<if test="required != null">`required` = #{required},</if>
			<if test="group != null">`attr_group` = #{group},</if>
			<if test="displayOrder != null">`display_order` = #{displayOrder},</if>
			<if test="status != null">`status` = #{status},</if>
			<if test="skuAttribute != null">`is_sku_attr` = #{skuAttribute},</if>
			<if test="deleted != null">`deleted` = #{deleted},</if>
			<if test="createTime != null">`create_time` = #{createTime}</if>,
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE `attr_name_id` = #{id}
	</update>

	<!--删除属性-->
	<delete id="delete" parameterType="long">
		UPDATE cloud_attr_name SET deleted = 1 WHERE `attr_name_id` = #{id}
	</delete>

</mapper>