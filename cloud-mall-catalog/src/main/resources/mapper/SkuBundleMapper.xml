<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.mapper.SkuBundleMapper">
	<resultMap id="SkuBundleMap" type="SkuBundle">
		<result property="skuId" column="sku_id" javaType="long" jdbcType="BIGINT" />
		<result property="bundleId" column="bundle_id" javaType="long" jdbcType="BIGINT"  />
        <result property="deleted" column="deleted" javaType="boolean" jdbcType="TINYINT" />
        <result property="createTime" column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<!--根据sku id查询bundle id 信息 -->
    <select id="findBySkuId" parameterType="long" resultMap="SkuBundleMap">
        SELECT * FROM cloud_sku_bundle WHERE `sku_id` = #{skuId}
    </select>

    <!--根据bundle id查询sku信息 -->
    <select id="findByBundleId" parameterType="long" resultMap="SkuBundleMap">
        SELECT * FROM cloud_sku_bundle WHERE `bundle_id` = #{bundleId}
    </select>

    <!-- 保存sku和bundle的关系 -->
    <insert id="saveSkuBundle" parameterType="SkuBundle">
      INSERT INTO
          cloud_sku_bundle(`sku_id`,`bundle_id`,`create_time`,`update_time`)
      VALUES
          (#{skuId},#{bundleId},#{createTime},#{updateTime})
    </insert>


    <!--删除sku 和 bundle 之间关系-->
    <delete id="deleteSkuBundle" parameterType="java.util.Map">
        DELETE FROM cloud_sku_bundle WHERE `sku_id` = #{skuId} AND `bundle_id` = #{bundleId}
    </delete>

    <!--删除sku 和 bundle 之间关系-->
    <delete id="deleteSkuBundleBySkuId" parameterType="long">
        DELETE FROM cloud_sku_bundle WHERE `sku_id` = #{skuId}
    </delete>

    <!--删除sku 和 bundle 之间关系-->
    <delete id="deleteSkuBundleByBundleId" parameterType="long">
        DELETE FROM cloud_sku_bundle WHERE `bundle_id` = #{bundleId}
    </delete>

    <!-- 批量删除sku 和 bundle 之间关系-->
    <delete id="batchDeleteSkuBundleBySkuList" parameterType="java.util.List">
        DELETE FROM cloud_sku_bundle WHERE `sku_id` IN
        <foreach collection="list" item="element" open="(" separator="," close=")"  >
            #{element.id}
        </foreach>
    </delete>
</mapper>