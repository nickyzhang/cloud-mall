<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.mapper.ProductMapper">
	<resultMap id="productMap" type="Product">
		<id property="id" column="product_id" javaType="long" jdbcType="BIGINT" />
		<result property="name" column="product_name" />
		<result property="description" column="product_desc" />
		<result property="rating" column="product_rating" />
		<result property="review" column="product_review" />
		<result property="displayOrder" column="display_order" />
		<result property="startTime" column="start_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="endTime" column="end_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="deleted" column="deleted" javaType="boolean" jdbcType="TINYINT" />
		<result property="createTime" column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<association property="category" column="cat_id" select="com.cloud.mapper.CategoryMapper.find" />
		<association property="brand" column="brand_id" select="com.cloud.mapper.BrandMapper.find" />
	</resultMap>

	<!--根据id查询product信息-->
	<select id="find" parameterType="long" resultMap="productMap">
		SELECT * FROM cloud_product WHERE `product_id` = #{id} AND `deleted` = 0
	</select>

	<!--查询所有产品-->
	<select id="findAll" resultMap="productMap">
		SELECT * FROM cloud_product WHERE `deleted` = 0
	</select>

	<!--统计表里所有product的数量-->
	<select id="count" resultType="long">
		SELECT COUNT(1) FROM cloud_product WHERE `deleted` = 0
	</select>


	<!--根据category id查询product信息-->
	<select id="findProductListByCategoryId" parameterType="long" resultMap="productMap">
		SELECT * FROM cloud_product WHERE `cat_id` = #{catId} AND `deleted` = 0
	</select>

	<!--根据brand id查询product信息-->
	<select id="findProductListByBrandId" parameterType="long" resultMap="productMap">
		SELECT * FROM cloud_product WHERE `brand_id` = #{brandId} AND `deleted` = 0
	</select>

	<!-- 添加product -->
	<insert id="save" parameterType="Product">
		INSERT INTO cloud_product
		(
			`product_id`,`product_name`,`product_desc`,`product_rating`,`product_review`,`display_order`,
			`start_time`,`end_time`,`deleted`,`create_time`,`update_time`,`cat_id`,`brand_id`
		)
		VALUES
		(
			#{id},#{name},#{description},#{rating},#{review},#{displayOrder},
			#{startTime},#{endTime},#{deleted},#{createTime},#{updateTime},#{category.id},#{brand.id}
		)
	</insert>

	<!-- 批量添加product -->
	<insert id="saveList" parameterType="java.util.ArrayList">
		INSERT INTO cloud_product
		(
			`product_id`,`product_name`,`product_desc`,`product_rating`,`product_review`,`display_order`,
			`start_time`,`end_time`,`deleted`,`create_time`,`update_time`,`cat_id`,`brand_id`
		)
		VALUES
		<foreach collection="list" item="element" separator=",">
		(
			#{element.id},
			#{element.name},
			#{element.description},
			#{element.rating},
			#{element.review},
			#{element.displayOrder},
			#{element.startTime},
			#{element.endTime},
			#{element.deleted},
			#{element.createTime},
			#{element.updateTime},
			#{element.category.id},
			#{element.brand.id}
		)
		</foreach>
	</insert>

	<!-- 更新product -->
	<update id="update" parameterType="Product">
		UPDATE cloud_product
		<set>
			<if test="id != null">`product_id` = #{id},</if>
			<if test="name != null">`product_name` = #{name},</if>
			<if test="description != null">`product_desc` = #{description},</if>
			<if test="rating != null">`product_rating` = #{rating},</if>
			<if test="review != null">`product_review` = #{review},</if>
			<if test="displayOrder != null">`display_order` = #{displayOrder},</if>
			<if test="startTime != null">`start_time` = #{startTime},</if>
			<if test="endTime != null">`end_time` = #{endTime},</if>
			<if test="deleted != null">`deleted` = #{deleted},</if>
			<if test="createTime != null">`create_time` = #{createTime},</if>
			<if test="updateTime != null">`update_time` = #{updateTime},</if>
			<if test="category != null">`cat_id` = #{category.id},</if>
			<if test="brand != null">`brand_id` = #{brand.id}</if>
		</set>
		WHERE `product_id` = #{id}
	</update>

	<!-- 删除product -->
	<delete id="delete" parameterType="long">
		UPDATE cloud_product SET `deleted` = 1 WHERE `product_id` = #{id}
	</delete>

</mapper>