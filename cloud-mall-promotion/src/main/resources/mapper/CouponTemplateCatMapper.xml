<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.mapper.CouponTemplateCatMapper">
	<resultMap id="CouponTemplateCatMap" type="CouponTemplateCat">
		<result property="catId" column="cat_id" javaType="long" jdbcType="BIGINT" />
		<result property="templateId" column="template_id" javaType="long" jdbcType="BIGINT" />
		<result property="deleted" column="deleted" javaType="boolean" jdbcType="TINYINT" />
		<result property="createTime" column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 根据优惠券 ID查询 -->
	<select id="findByTemplateId" parameterType="long" resultMap="CouponTemplateCatMap">
		SELECT * FROM cloud_coupon_template_cat
		WHERE `template_id` = #{templateId} AND `deleted` = 0
	</select>

	<!-- 根据品类的ID查询 -->
	<select id="findByCatId" parameterType="long" resultMap="CouponTemplateCatMap">
		SELECT * FROM cloud_coupon_template_cat
		WHERE `cat_id` = #{catId} AND `deleted` = 0
	</select>

	<!-- 保存优惠券和品类的关系 -->
	<insert id="saveCouponTemplateCat" parameterType="CouponTemplateCat">
		INSERT INTO
		cloud_coupon_template_cat(`cat_id`,`template_id`,`deleted`,`create_time`,`update_time`)
		VALUES
		(#{catId},#{templateId},#{deleted},#{createTime},#{updateTime})
	</insert>

	<!-- 删除品类和优惠券的关系-->
	<delete id="deleteCouponTemplateCat" parameterType="java.util.Map">
		UPDATE cloud_coupon_template_cat SET `deleted` = 1 WHERE `cat_id` = #{catId} AND `template_id` = #{templateId}
	</delete>

	<!-- 删除品类和优惠券的关系 -->
	<delete id="deleteCouponTemplateCatByCatId" parameterType="long">
		UPDATE cloud_coupon_template_cat SET `deleted` = 1  WHERE `cat_id` = #{catId}
	</delete>

	<!-- 删除品类和优惠券的关系 -->
	<delete id="deleteCouponTemplateCatByTemplateId" parameterType="long">
		UPDATE cloud_coupon_template_cat SET `deleted` = 1 WHERE `template_id` = #{templateId}
	</delete>
</mapper>