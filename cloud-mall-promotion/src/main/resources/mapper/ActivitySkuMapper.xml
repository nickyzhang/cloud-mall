<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.mapper.ActivitySkuMapper">
	<resultMap id="ActivitySkuMap" type="ActivitySku">
		<result property="skuId" column="sku_id" javaType="long" jdbcType="BIGINT" />
		<result property="activityId" column="activity_id" javaType="long" jdbcType="BIGINT" />
		<result property="deleted" column="deleted" javaType="boolean" jdbcType="TINYINT" />
		<result property="createTime" column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
		<result property="updateTime" column="update_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 根据Activity ID查询 -->
	<select id="findByActivityId" parameterType="long" resultMap="ActivitySkuMap">
		SELECT * FROM cloud_activity_sku WHERE `activity_id` = #{activityId}
	</select>

	<!-- 根据SKU的ID查询 -->
	<select id="findBySkuId" parameterType="long" resultMap="ActivitySkuMap">
		SELECT * FROM cloud_activity_sku WHERE `sku_id` = #{skuId}
	</select>

	<!-- 保存活动和sku的关系 -->
	<insert id="saveActivitySku" parameterType="ActivitySku">
		INSERT INTO
		cloud_activity_sku(`sku_id`,`activity_id`,`deleted`,`create_time`,`update_time`)
		VALUES
		(#{skuId},#{activityId},#{deleted},#{createTime},#{updateTime})
	</insert>

	<!-- 删除活动和sku的关系-->
	<delete id="deleteActivitySku" parameterType="java.util.Map">
		UPDATE cloud_activity_sku SET `deleted` = 1 WHERE `sku_id` = #{skuId} AND `activity_id` = #{activityId}
	</delete>

	<!-- 删除活动和sku的关系 -->
	<delete id="deleteActivitySkuBySkuId" parameterType="long">
		UPDATE cloud_activity_sku SET `deleted` = 1  WHERE `sku_id` = #{skuId}
	</delete>

	<!-- 删除活动和sku的关系 -->
	<delete id="deleteActivitySkuByActivityId" parameterType="long">
		UPDATE cloud_activity_sku SET `deleted` = 1 WHERE `activity_id` = #{activityId}
	</delete>
</mapper>