<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.shop.pay.mapper.PayNotifyMapper">
	<resultMap id="PayNotifyResult" type="PayNotify">
		<id property="id" column="id" javaType="long" jdbcType="BIGINT"/>
		<result property="orderId" column="order_id" javaType="long" jdbcType="BIGINT" />
		<result property="notifyStatus" column="notify_status" />
		<result property="notifyType" column="notify_type" />
		<result property="notifyTimes" column="notify_times" />
		<result property="maxNotifyTimes" column="max_notify_times" />
		<result property="deleted" column="deleted" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<sql id="Base_Column_List">
		id,order_id,notify_status,notify_type,notify_times,max_notify_times,
		deleted,create_time,update_time
	</sql>

	<!-- 根据ID查询通知 -->
	<select id="findById" parameterType="long" resultMap="PayNotifyResult">
		SELECT <include refid="Base_Column_List" />
		FROM cloud_pay_notify
		WHERE `id` = #{id}
	</select>

	<!-- 根据订单ID查询通知 -->
	<select id="findByOrderId" parameterType="long" resultMap="PayNotifyResult">
		SELECT <include refid="Base_Column_List" />
		FROM cloud_pay_notify
		WHERE `order_id` = #{orderId}
	</select>

	<!--统计所有通知数量 -->
	<select id="count" resultType="long">
		SELECT COUNT(1) FROM cloud_pay_notify
	</select>

	<!-- 保存支付记录信息 -->
	<insert id="save" parameterType="PayNotify">
		INSERT INTO cloud_pay_notify
		(
			`id`,`order_id`,`notify_status`,`notify_type`,`notify_times`,`max_notify_times`,
			`deleted`,`create_time`,`update_time`
		)
		VALUES
		(
			#{id},#{orderId},#{notifyStatus},#{notifyType},#{notifyTimes},#{maxNotifyTimes},
			#{deleted},#{createTime},#{updateTime}
		)
	</insert>


	<!-- 更新支付记录信息 -->
	<update id="update" parameterType="PayNotify">
		UPDATE cloud_pay_notify
		<set>
			<if test="id != null">`id` = #{id},</if>
			<if test="orderId != null">`order_id` = #{orderId},</if>
			<if test="notifyStatus != null">`notify_status` = #{notifyStatus},</if>
			<if test="notifyType != null">`notify_type` = #{notifyType},</if>
			<if test="notifyTimes != null">`notify_times` = #{notifyTimes},</if>
			<if test="maxNotifyTimes != null">`max_notify_times` = #{maxNotifyTimes},</if>
			<if test="deleted != null">`deleted` = #{deleted},</if>
			<if test="createTime != null">`create_time` = #{createTime},</if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		WHERE `id` = #{id}
	</update>

	<delete id="deleteById" parameterType="long">
		DELETE FROM cloud_pay_notify WHERE `id` = #{id}
	</delete>

	<delete id="deleteByOrderId" parameterType="long">
		DELETE FROM cloud_pay_notify WHERE `order_id` = #{orderId}
	</delete>
</mapper>